    <style name="topbar_bg">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg_pure_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>
    <style name="topbar_bg_black">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/top_bar_bg_black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">46.0dip</item>
    </style>
    
    <style name="topbar_text">
	    <item name="android:textSize">23sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:textColor">#ffffffff</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:shadowColor">#40000000</item>
	    <item name="android:shadowDy">-2.0</item>
	    <item name="android:shadowRadius">4.0</item>
	    <item name="android:layout_centerInParent">true</item>
    </style>
    
    <style name="topbar_btn">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="topbar_left_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginLeft">7.0dip</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    
    <style name="topbar_right_btn" parent="@style/topbar_btn">
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <!--指向star_rating_bar_full.xml文件 -->

        <item name="android:progressDrawable">@drawable/star_rating_bar_full</item>
    </style>
    <style name="AppTheme" parent="android:Theme.Light" />
